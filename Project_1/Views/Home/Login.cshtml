@{
    ViewBag.Title = "Login";
}

<div class="content">
      <div class="container">
        <div class="page-header">
          <h1><font color="green">Signin to Shopping Site</font></h1>
        </div>
        <div class="row">
          <div class="span6 offset3">
            <h4 class="widget-header"><i class="icon-lock"></i><font color="blue">Please Give User Name and Password</h4>
            <div class="widget-body">
              <div class="center-align">
                <form class="form-horizontal form-signin-signup" action="/Home/Validate" method="post">
                  <input type="text" name="uname" placeholder="User Name" required="required">
                  <input type="password" name="password" placeholder="Password" required="required">
                  <div class="remember-me">
                    <div class="pull-left">
                      <label class="checkbox">
                        <input type="checkbox">Remember me
                      </label>
                    </div>
                    <div class="pull-right">
                      <a href="#"><font color="red">Forgot password?</font></a>
                    </div>
                    <div class="clearfix"></div>
                  </div>
                  <input type="submit" value="Signin" class="btn btn-primary btn-large">
                </form>
                <h4><i class="icon-thumbs-up"></i><font color="green"> Sign in with third party account</font></h4>
                <ul class="signin-with-list">
                  <li>
                    <a class="btn-twitter">
                      <i class="icon-twitter icon-large"></i>
                      Signin with Twitter
                    </a>
                  </li>
                  <li>
                    <a class="btn-facebook">
                      <i class="icon-facebook icon-large"></i>
                      Signin with Facebook
                    </a>
                  </li>
                  <li>
                    <a class="btn-google">
                      <i class="icon-google-plus icon-large"></i>
                      Signin with Google
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
