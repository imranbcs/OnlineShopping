@{
    ViewBag.Title = "seeOrders";
}
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model List<Project_1.Models.Order>
<h2>seeOrders</h2>
<div class="row">
          <div class="span6 offset3">
            <h4 class="widget-header"><i class="icon-lock"></i><font color="blue">All Order Details</h4>
            <div class="widget-body">
              <div class="center-align">
                  <div class="form-horizontal form-signin-signup">
                      
                          <table border="1">
                            <tr>
                                <td>ID</td>
                                <td>Customer Name</td>
                                <td>Address</td>
                                 <td>Date</td>
                                 <td>Amount</td>
                                <td>Product Details</td>
                               


                            </tr>
                              
                          @foreach (var a in Model)
                          {
                              <tr>
                                <td>@a.OId</td>
                                <td>@a.CustomerName</td>
                                <td>@a.Address</td>
                                <td>@a.Date</td>
                                <td>@a.Amount</td>
                                <td>@a.PurchaseProducts</td>



                            </tr>
                          }
                          </table>
                    

              

                    <div class="pull-right">
                  <a href="/Admin/Index">Back</div>
                      
                </div>
              </div>
            </div>
          </div>
        </div>
